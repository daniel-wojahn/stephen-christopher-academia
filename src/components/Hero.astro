---
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'

/**
 * Hero Component
 *
 * @description A component that displays a hero section with a title, description, and image
 */
interface Props {
  /**
   * The source URL for the image
   */
  src?: string
}

---

<section class="hero mt-24 mb-32">
  <div class="container">
    <div class="grid grid-cols-1 items-center gap-14 lg:grid-cols-2">
      <div class="flex flex-col items-center gap-8 md:items-start">
        <h1 class="text-center text-4xl md:text-left lg:text-6xl font-semibold mb-2" style="letter-spacing:-0.01em; color: var(--brand-neutral);">Stephen Christopher</h1>
        <h2 class="text-2xl md:text-3xl font-normal mb-4 italic" style="color: var(--brand-coral);">Anthropologist of Religion</h2>
        <p class="short-bio max-w-xl text-center md:text-left mb-6">
          I am an anthropologist of religion, specializing in Himalayan tribes, the Tibetan diaspora and global Buddhism. My research focuses on how minority religions engage with the state. I have taught over 1,000 students in nine universities and co-lead a major digital humanities project on new religiosity.
        </p>
        <div class="flex flex-col gap-3 min-[500px]:flex-row w-full">
          <a class="button has-icon cv-btn flex-1 min-w-[140px] text-center" href="/cv">
            <Icon name="lucide:file-text" />
            Full CV
          </a>
          <a class="button has-icon contact-btn flex-1 min-w-[140px] text-center" href="mailto:stephenchristopher110@gmail.com">
            <Icon name="lucide:mail" />
            Contact
          </a>
        </div>
      </div>
      <Image
        class="lg:block hero-img mx-auto lg:ml-auto lg:mr-0"
        src="/portrait.jpg"
        alt="Portrait of Stephen Christopher"
        decoding="async"
        width={520}
        height={520}
        loading="eager"
      />
    </div>
  </div>
</section>

<style>
:root {
  --gold: #F6BD60;
  --offwhite: #F7EDE2;
  --peach: #F5CAC3;
  --sage: #84A59D;
  --coral: #F28482;
}
.cv-btn {
  background: var(--brand-sage);
  color: #fff;
  border: none;
  border-radius: 999px;
  box-shadow: 0 2px 10px 0 rgba(60,60,60,0.06);
  transition: background 0.18s, box-shadow 0.18s;
}
.cv-btn:hover {
  background: #75a094; /* Slightly darker sage */
  color: #fff;
  box-shadow: 0 4px 16px 0 rgba(60,60,60,0.11);
  outline: 2px solid var(--brand-sage);
  outline-offset: 2px;
}
.contact-btn {
  background: var(--brand-coral);
  color: #fff;
  border: none;
  border-radius: 999px;
  box-shadow: 0 2px 10px 0 rgba(60,60,60,0.06);
  transition: background 0.18s, box-shadow 0.18s;
}
.contact-btn:hover {
  background: var(--brand-peach);
  color: #fff;
  box-shadow: 0 4px 16px 0 rgba(60,60,60,0.11);
  outline: 2px solid var(--brand-peach);
  outline-offset: 2px;
}

.hero-img {
  border-radius: 0.75rem !important;
  box-shadow: 0 8px 36px 0 rgba(132, 165, 157, 0.19) !important;
  border: 2px solid #e5e7eb !important;
  object-fit: cover !important;
  background: #fff !important;
}

<style lang="scss">
  h1 {
    text-wrap: unset;
  }

  .short-bio {
    font-size: 1.18rem;
    font-style: italic;
    color: #4b2e2b;
    line-height: 1.7;
    opacity: 0.97;
    animation: fadeInBio 1.2s cubic-bezier(0.4,0,0.2,1);
    transition: color 0.3s;
  }
  @keyframes fadeInBio {
    from { opacity: 0; transform: translateY(16px); }
    to { opacity: 0.97; transform: none; }
  }
</style>


