<style>
  .teaching-content {
    max-width: 1000px;
    margin: 0 auto;
  }
  
  .intro-text {
    font-size: var(--font-size-md);
    line-height: 1.7;
    margin-bottom: var(--spacing-lg);
  }
  
  .intro-section {
    margin-bottom: var(--spacing-xl);
  }
  
  /* ContentMedia component styling */
  :global(.content-media) {
    margin-bottom: var(--spacing-xl);
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  
  :global(.content-media:hover) {
    transform: translateY(-3px);
    box-shadow: 0 4px 12px 0 rgba(60,60,60,0.1);
  }
  
  :global(.content-media strong) {
    color: var(--brand-sage);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    display: block;
    margin-bottom: var(--spacing-xs);
    letter-spacing: -0.01em;
  }
  
  :global(.content-media img) {
    border-radius: var(--radius-sm);
    box-shadow: 0 2px 10px 0 rgba(60,60,60,0.1);
    transition: transform 0.3s ease;
  }
  
  :global(.content-media:hover img) {
    transform: scale(1.02);
  }
  
  .btn {
    display: inline-block;
    margin-top: var(--spacing-md);
    background: var(--brand-peach);
    color: #fff;
    padding: 0.45em 1.1em;
    border-radius: var(--radius-full);
    font-size: 1.18rem;
    text-decoration: none;
    font-weight: var(--font-weight-semibold);
    transition: background 0.18s, box-shadow 0.18s;
    text-align: center;
  }
  
  .btn:hover,
  .btn:focus {
    background: var(--brand-coral);
    box-shadow: 0 4px 16px 0 rgba(60,60,60,0.11);
    text-decoration: none;
    outline: 2px solid var(--brand-coral);
    outline-offset: 2px;
  }
  
  @media (max-width: 900px) {
    :global(.content-media) {
      flex-direction: column;
    }
    
    :global(.content-media .content) {
      padding: var(--spacing-md) 0 0 0;
    }
    
    :global(.content-media.reverse .content) {
      padding: var(--spacing-md) 0 0 0;
      order: 2;
    }
    
    :global(.content-media .image) {
      width: 100%;
    }
  }
</style>